{
    "name": "@darkforest-aztec/contracts",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "clean": "rm -rf ./src/artifacts ./target",
        "set-feature-flags": "node scripts/set_feature_flags.js",
        "bytecode:size": "node scripts/print_public_bytecode_size.js",
        "compile": "node scripts/set_feature_flags.js && aztec compile && node scripts/sync_artifacts.js",
        "compile:prod": "node scripts/set_feature_flags.js && aztec compile && node scripts/sync_artifacts.js",
        "sync:artifacts": "node scripts/sync_artifacts.js",
        "codegen": "aztec codegen target --outdir src/artifacts",
        "deploy:local": "node scripts/deploy_local.js",
        "test": "yarn test:nr",
        "test:nr": "node scripts/set_feature_flags.js && aztec compile && yarn workspace @darkforest-aztec/nft compile && cp ../nft/target/darkforest_nft-NFT.json ./darkforest_nft-NFT.json && aztec test --test-threads 1",
        "test:e2e": "node scripts/e2e_darkforest.js",
        "bench:move": "node scripts/bench_move.js"
    },
    "dependencies": {
        "@aztec/accounts": "3.0.0-devnet.20251212",
        "@aztec/aztec.js": "3.0.0-devnet.20251212",
        "@aztec/noir-contracts.js": "3.0.0-devnet.20251212",
        "@aztec/protocol-contracts": "3.0.0-devnet.20251212",
        "@aztec/pxe": "3.0.0-devnet.20251212",
        "@aztec/stdlib": "3.0.0-devnet.20251212",
        "@aztec/test-wallet": "3.0.0-devnet.20251212",
        "dotenv": "^17.2.2"
    },
    "devDependencies": {
        "@types/node": "^22.15.1",
        "typescript": "^5.4.4"
    }
}
